{
    "name": "paco-the-chicken",
    "version": "1.0.1",
    "description": "Paco's Chicken Palace - The most clucking awesome memecoin restaurant on Abstract",
    "main": "index.html",
    "scripts": {
        "start": "node server.js",
        "dev": "node dev-server.js",
        "dev:local": "node server.js",
        "dev:fork": "echo anvil fork not wired; use viem fork scripts",
        "seed:hotwallet": "node -e \"console.log('stub: seed house wallet locally')\"",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 0",
        "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
        "format": "prettier --write '**/*.{js,ts,jsx,tsx,json,css,html}'",
        "format:check": "prettier --check '**/*.{js,ts,jsx,tsx,json,css,html}'",
        "test": "jest",
        "test:unit": "jest --testPathPattern=__tests__",
        "test:integration": "jest --testPathPattern=integration",
        "test:e2e": "playwright test",
        "test:indexer": "node crash-casino/verification/deposit-indexer-tests.js",
        "test:load": "node scripts/ws-stress.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "validate:money": "node scripts/validate-money-arithmetic.js",
        "validate:invariants": "curl -f http://localhost:3000/internal/health/invariants || echo 'Health check failed'",
        "verify:all": "node scripts/verify-all.js",
        "serve": "npx serve --cors -s . -l 3000",
        "build": "node build.js",
        "preview": "npm run build && npx serve -s public -l 4173",
        "optimize": "npm run build",
        "deploy-netlify": "npm run build && echo 'Ready for Netlify deployment from public/ directory'",
        "deploy-vercel": "npm run build && echo 'Ready for Vercel deployment from public/ directory'",
        "deploy-pages": "npm run build && echo 'Ready for GitHub Pages deployment from public/ directory'",
        "clean": "rm -rf public dist node_modules/.cache coverage .nyc_output || echo 'Clean completed'"
    },
    "keywords": [
        "memecoin",
        "chicken",
        "restaurant",
        "Abstract",
        "crypto",
        "PFP",
        "generator"
    ],
    "author": "Paco's Chicken Palace",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^20.0.0",
        "eslint": "^8.0.0",
        "fs-extra": "^11.3.0",
        "glob": "^10.4.5",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.0",
        "jest": "^29.0.0",
        "jscodeshift": "^17.3.0",
        "lint-staged": "^15.0.0",
        "live-server": "^1.2.2",
        "prettier": "^3.0.0",
        "socket.io-client": "^4.8.1",
        "supertest": "^6.3.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=16"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/TobyLyon/Paco.git"
    },
    "dependencies": {
        "@abstract-foundation/agw-client": "^1.8.7",
        "@abstract-foundation/agw-react": "^1.8.8",
        "@rainbow-me/rainbowkit": "^2.2.8",
        "@supabase/supabase-js": "^2.53.0",
        "@tanstack/react-query": "^5.59.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "ethers": "^6.13.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "prom-client": "^15.0.0",
        "socket.io": "^4.8.1",
        "statman-stopwatch": "^2.18.1",
        "viem": "^2.21.0",
        "wagmi": "^2.12.0"
    }
}
